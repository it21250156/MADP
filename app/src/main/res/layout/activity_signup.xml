<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity"
    android:background="@color/blue2"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:id="@+id/tv_login"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/blue1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/blue1"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edtText_signup_name"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/blue1"
                android:paddingTop="16dp"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edtText_signup_email"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"
                android:inputType="textEmailAddress"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="@color/blue1"
                android:paddingTop="16dp"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edtText_signup_mobile"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"
                android:inputType="phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/blue1"
                android:paddingTop="16dp"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edtText_signup_password"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"
                android:inputType="textPassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textColor="@color/blue1"
                android:paddingTop="16dp"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edtText_signup_confirmpassword"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"
                android:inputType="textPassword"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="@dimen/btnWidth"
                    android:layout_height="@dimen/btnHeight"
                    android:id="@+id/btn_signup"
                    android:text="Register"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/blue3"
                    android:onClick="loginInter">

                </Button>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>