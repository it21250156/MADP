<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPW">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="412dp"
        android:layout_height="580dp"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="151dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Password"
                android:textColor="@color/blue1"
                android:paddingTop="16dp"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edtText_reset_currpw"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"
                android:inputType="textPassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:textColor="@color/blue1"
                android:paddingTop="16dp"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edtText_reset_newpw"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"
                android:inputType="textPassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm New Password"
                android:textColor="@color/blue1"
                android:paddingTop="16dp"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edtText_reset_confirmnewpw"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"
                android:inputType="textPassword"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="@dimen/btnWidthLong"
                    android:layout_height="@dimen/btnHeight"
                    android:id="@+id/btn_signup"
                    android:text="Save New Password"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/blue3"
                    android:onClick="loginInter">

                </Button>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>